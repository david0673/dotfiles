# Unix
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

alias tlf="tail -f"
alias l='ls'
alias ll="ls -al"
alias ln='ln -v'
alias lh='ls -Alh'
alias lt="ls --time-style='+%d-%m-%Y %H:%M:%S' -l "
alias mkdir='mkdir -p'
alias ack='ack-grep'
alias diff='colordiff -u'
alias h='history'

# Reloads ZSH
alias reload='. ~/.zshrc'

# Editors
alias ed="$EDITOR"
alias ved="$VISUAL"
alias todo='$EDITOR ~/.todo'

# Misc System
alias e='exit'
alias brewuu="brew update && brew upgrade"

# Pipe my public key to my clipboard.
alias pubkey="more ~/.ssh/id_rsa.pub | pbcopy | echo '=> Public key copied to pasteboard.'"

# Git
alias gl='git pull --prune'
alias glog="git log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"
alias gp='git push origin HEAD'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gcb='git copy-branch-name'
alias gb='git branch'
alias gs='git status -sb' # upgrade your git if -sb breaks for you. it's fun.

alias gitt='gittower .'
alias gitsweep='git-sweep preview'
alias gitsweepc='git-sweep cleanup'

# Capistrano
alias capd='cap deploy'

# Rubygems
alias gi="gem install"
alias giv="gem install -v"

# Bundler
alias b="bundle"
alias be="bundle exec"
alias br="bundle exec rake"

# Rails
alias migrate="rake db:migrate db:rollback && rake db:migrate"

# Python\Virtualenv
alias v="source .venv/bin/activate"
alias vd="deactivate"
alias ck="cookiecutter"

alias simplehttp="python -m SimpleHTTPServer 8000"

# Xcode
alias ios="open /Applications/Xcode.app/Contents/Applications/iOS\ Simulator.app"
alias pi="pod install"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Misc.
alias pt='pivotal_tools'
alias ptbug='pivotal_tools create bug'
alias ptf='pivotal_tools create feature'

# Include custom aliases
[[ -f ~/.aliases.local ]] && source ~/.aliases.local
